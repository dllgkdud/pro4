package com.naver.controller;

import java.util.List;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import com.naver.dto.MemDTO;
import com.naver.service.MemService;

@Controller
@RequestMapping("/mem/*")
public class MemController {
	
	@Autowired
	MemService memService;
	
	@GetMapping("detail.do")
	public String getMemDetail(HttpServletRequest request, Model model) throws Exception {
		List<MemDTO> memDetail = memService.memDetail();
		model.addAttribute("memDetail", memDetail);
		return "mem/memDetail";
	}
}
